# Basic Settings
set preview true
set previewer ~/scripts/lf/preview
set hidden true
set color256 true

# Custom Functions
cmd open ${{
    case $(file --mime-type "$f" -bL) in
        text/*|application/json) $EDITOR "$fx";;
        *) for f in "$fx"; do xdg-open "$f" > /dev/null 2> /dev/null & done;;
    esac
}}

cmd mkdir ${{
    set -f
    printf "Directory Name: "
    read ans
    mkdir $ans
}}

cmd mkexec ${{
    for f in "$fx"; do chmod +x "$f"
}}

cmd mkfile ${{
    set -f
    printf "File Name: "
    read ans
    $EDITOR $ans
}}

cmd sudomkfile ${{
    set -f
    printf "File Name: "
    read ans
    sudo $EDITOR $ans
}}

cmd setwallpaper ${{
    cp "$f" ~/.config/wall.png && feh --bg-scale "$f"
}}

cmd openterm ${{
    $TERMINAL &
}}

# Bindings
# Remove some defaults
map m
map n
map "'"
map '"'
map d
map c
map e

# File Openers
map ee $$EDITOR "$f"
map es $sudo $EDITOR "$f"
map ve $$VISUAL "$f"
map ve $sudo $VISUAL "$f"
map r $$READER "$f"
map b $$BROWSER "$f"
map s $$PAGER "$f"

# Basic Functions
map dd delete
map x cut
map y copy
map <enter> open
map <esc> quit
map nf mkfile
map ns sudomkfile
map md mkdir
map mx mkexec
map bg setwallpaper
map ot openterm

