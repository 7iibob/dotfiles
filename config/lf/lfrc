# Basic Settings
set preview true
set previewer ~/scripts/lf/preview
set hidden true
set color256 true

# Custom Functions
cmd open ${{
    case $(file --mime-type $f -b) in
        text/*) $EDITOR $fx;;
        *) for f in "$fx"; do $OPENER "$f" > /dev/null 2> /dev/null & done;;
    esac
}}

cmd mkdir ${{
    cd "$(pwd)"
    set -f
    printf "Directory Name: "
    read ans
    mkdir $ans
}}

cmd mkexec ${{
    for f in "$fx"; do chmod +x "$f"
}}

cmd mkfile ${{
    cd "$(pwd)"
    set -f
    printf "File Name: "
    read ans
    $EDITOR $ans
}}

cmd sudomkfile ${{
    cd "$(pwd)"
    set -f
    printf "File Name: "
    read ans
    sudo $EDITOR $ans
}}

# Bindings
# Remove some defaults
map m
map n
map "'"
map '"'
map d
map c
map e

# Basic Functions
map ee $$EDITOR "$f"
map es $sudo $EDITOR "$f"
map r $$PAGER "$f"
map dd delete
map x cut
map y copy
map nf mkfile
map ns sudomkfile
map md mkdir
map mx mkexec

